 
<div>
  <% if(typeof mdata != 'undefined') { %>
  <% mdata.forEach(function(md) { %>
  <br>
  <%= md._id %>
  <br>
  <%= md.title %>
  <br>
  <%= md.organizer %>
  <br>
  <%= md.participants %>
  <br>
  <%= md.date %>
  <br>
  <%= md.mtime %>
  <hr>
  <%}); %>
<% } %>
</div>

<br>
<a href="/users/logout" style="position:absolute; left:1100px;" class="btn btn-secondary">Logout</a>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h3 class="text-center mb-3"> Create new meeting
      </h3>

<% if(typeof errors != 'undefined') { %>
  <% errors.forEach(function(error) { %>
   <div class="alert alert-warning alert-dismissible fade show" role="alert">
  <%= error.msg %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
  <%}); %>
<% } %>

 <% if(success_msg != ''){ %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= success_msg %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% } %> 

      <form action="/users/dashboard" method="POST">
        <div class="form-group">
          <label for="title">Meeting Title</label>
          <input
            id="title"
            name="title"
            class="form-control"
            placeholder="Enter meeting title"
            value="<%= typeof title != 'undefined' ? title : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="organizer">Meeting organizer</label>
          <input
            id="organizer"
            name="organizer"
            class="form-control"
            placeholder="Enter organizer's name"
            value="<%= typeof organizer != 'undefined' ? organizer : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="participants">Participants</label>
          <input
            id="participants"
            name="participants"
            class="form-control"
            placeholder="Enter names of participants"
            value="<%= typeof participants != 'undefined' ? participants : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="date">Meeting date</label>
          <input
            id="date"
            name="date"
            class="form-control"
            placeholder="dd-mm-yyyy"
            value="<%= typeof date != 'undefined' ? date : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="mtime">Meeting time</label>
          <input
            id="mtime"
            name="mtime"
            class="form-control"
            placeholder="hh:mm"
            value="<%= typeof mtime != 'undefined' ? mtime : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Add new meeting
        </button>
      </form>
    </div>

